<launch>
	<arg name="base_frame" default="base_link" />
	<arg name="odom_frame" default="odom" />
	<arg name="map_frame" default="map" />
	<arg name="person_frame" default="person_raw" />
	<arg name="use_deadman" default="false" />
	<arg name="laser_frame" default="laser" />
	<arg name="laser_frame_back" default="laser_back" />

	<param name="/use_sim_time" value="true"/>
	<arg name="move_base_goal_frequency" default="0.5" />

	<node pkg="person_follower" type="clock_publisher_node" name="clock_publisher_node" />

	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher1" args="0.11 0 0.220 0 0 0 $(arg base_frame) $(arg laser_frame) 50"/>

	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher2" args="-0.10 -0.05 0.195 3.141592653589793 0 0 $(arg laser_frame) $(arg laser_frame_back) 50"/>

	<!-- <node pkg="person_follower" type="relative_kinect_publisher.py" name="relative_kinect_publisher" />  -->

	<node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
		<param name="odom_frame" value="odom"/>
		<param name="base_frame" value="$(arg base_frame)"/>
		<param name="map_frame" value="$(arg map_frame)"/>
	    <param name="map_update_interval" value="0.025"/>
	    <param name="particles" value="20" />
	    <param name="delta" value="0.05"/>
	    <param name="maxRange" value="7"/>
	    <param name="xmin" value="-15"/>
	    <param name="ymin" value="-15"/>
	    <param name="xmax" value="15"/>
	    <param name="ymax" value="15"/>
	    <rosparam command="load" file="$(find person_follower)/config_nav/mapper_params.yaml" />
	</node>

	<include file="$(find person_follower)/config_nav_pioneer/move_base.xml" />
	
	<include file="$(find person_follower)/launch/yolo.launch" />
	<node pkg="leg_detector" type="leg_detector" name="leg_detector" args="$(find leg_detector)/config/trained_leg_detector.yaml" output="screen">
		<remap from="/scan" to="/scan_filtered" />
		<param name="leg_reliability_limit" value="0.9"/>
		<param name="min_points_per_group" value="7"/>
		<param name="connection_threshold" value="0.06"/>
		<param name="use_seeds" value="true" />
		<param name="max_meas_jump" value="0.7" />
		<param name="max_track_jump" value="0.5" />
		<param name="leg_pair_separation" value="0.5" />
		<param name="fixed_frame" value="$(arg map_frame)" />
	</node>

	<node pkg="person_follower" type="fisheye_blob_publisher_node" name="fisheye_blob_publisher_node">
		<param name="image_transport" value="compressed" />
		<param name="camera_wrt_laser_x" value="-0.03" />
		<param name="camera_wrt_laser_y" value="0.0" />
		<param name="camera_wrt_laser_z" value="0.094" />
		<param name="camera_wrt_laser_pitch" value="5.0" />
		<param name="camera_parent_frame" value="$(arg laser_frame_back)" />
		<param name="map_frame" value="$(arg map_frame)" />
		<param name="person_lost_timeout" value="2.0"/>

		<remap from="/scan" to="/back_scan" />
	</node>
	
	<node name="nav_goal_throttler" type="throttle" pkg="topic_tools" args="messages /move_base_simple/goal_unthrottled $(arg move_base_goal_frequency) /move_base_simple/goal" />

	<!-- nodelets and its manager for cmd_vel mux -->
	<node pkg="nodelet" type="nodelet" name="cmd_vel_mux_nodelet_manager"  args="manager"/>
	
	<node pkg="nodelet" type="nodelet" name="yocs_cmd_vel_mux"
        args="load yocs_cmd_vel_mux/CmdVelMuxNodelet cmd_vel_mux_nodelet_manager">
		<param name="yaml_cfg_file" value="$(find person_follower)/config_nav/cmd_vel_mux.yaml"/>
	</node>
	<!-- nodelets and its manager for cmd_vel mux -->

	<node pkg="rviz" type="rviz" name="rviz" output="screen" args="-d $(find person_follower)/config/pioneer.rviz"/>

	<node pkg="joy" type="joy_node" name="joy_node" output="screen">
		<remap from="/joy" to="/teleop/joy" />
		<param name="dev" type="string" value="/dev/input/js0" />
		<param name="autorepeat_rate" value="10" />
	</node>

	<node pkg="teleop_twist_joy" type="teleop_node" name="teleop_node">
		<remap from="joy" to="teleop/joy" />
		<remap from="cmd_vel" to="teleop_cmd_vel" />
		<param name="enable_button" value="1" />
	</node>
	
	<node pkg="person_follower" type="person_follower_node" name="person_follower_node" output="screen">
		<param name="base_frame" value="$(arg base_frame)" />
		<param name="odom_frame" value="$(arg odom_frame)" />
		<param name="map_frame" value="$(arg map_frame)" />
		<param name="person_frame" value="$(arg person_frame)" />
		<param name="use_deadman" value="$(arg use_deadman)" type="bool"/>

		<remap from="/husky/odom" to="/odom" />
		<remap from="/husky/cmd_vel" to="/cmd_vel" />
	</node>

	<include file="$(find person_follower)/launch/hydro.launch">
		<arg name="laser_frame" value="$(arg laser_frame)" />
        <arg name="laser_frame_back" value="$(arg laser_frame_back)" />
	</include>
</launch>
